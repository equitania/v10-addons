							<!--<field name="eq_citypart" placeholder="District" style="width: 50%%" />-->
						<!--</div>-->

						<!--<div>-->
							<!--<field name="country_id" placeholder="Country" style="width: 50%%"  class="o_address_country"-->
								<!--options='{"no_open": True, "no_create": True}' />-->
							<!--<field name="state_id"  class="o_address_state" placeholder="State"-->
								<!--style="width: 50%%" options='{"no_open": True}'  /> &lt;!&ndash;class="oe_no_button" &ndash;&gt;-->
						<!--</div>-->
					<!--</div>-->
				<!--</div>-->
				<div class="oe_title" position="attributes">
					<attribute name="style">width: 50%%</attribute>
				</div>
			</field>
		</record>

